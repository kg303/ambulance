<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Pacijent</h5>

                    <!-- General Form Elements -->
                    <form action="/submit-patient-form" method="post">
                        <div class="row mb-3">
                            <label for="firstname" class="col-sm-2 col-form-label">Ime:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="firstname" required title="Ovo polje je obavezno!">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Prezime:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="lastname" required title="Ovo polje je obavezno!">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">JMBG:</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" name="jmbg" required title="Ovo polje je obavezno!">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="selectCity" class="col-sm-2 col-form-label">Grad:</label>
                            <div class="col-sm-10">
                                <select class="form-select" id="selectCity" name="city" required title="Ovo polje je obavezno!">
                                    <option value="Grahovo">Grahovo</option>
                                    <option value="Drvar">Drvar</option>
                                    <option value="Derventa">Derventa</option>
                                    <option value="Prijedor">Prijedor</option>
                                    <option value="Borca">Borca</option>
                                    <option value="Banja Luka">Banja Luka</option>
                                    <option value="Gradiska">Gradiska</option>
                                    <option value="Prnjavor">Prnjavor</option>
                                </select>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-2 col-form-label label-auto-resize" title="Zabiljeska - Obavezno polje">Zabiljeska:</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" style="height: 100px" title="Zabiljeska - Obavezno polje" name="description" required></textarea>
                            </div>
                        </div>



                        <div class="row mb-3">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Potvrdi</button>
                            </div>
                        </div>

                    </form><!-- End General Form Elements -->

                </div>
            </div>

        </div>
    </div>
</section>
